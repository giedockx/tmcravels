---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Vrienden of familie",
  "Social Media",
  "Andere",
]

---

<form name="Contact Form" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="Naam" name="Name" placeholder="Voornaam Achternaam" />
  <FormInput type="email" label="Email" name="Email" placeholder="jouw@mailadres.com" />
  <FormSelect label="Hoe heeft u ons ontdekt?" options={selectOptions} />
  <FormTextarea label="Bericht" name="Message" placeholder="Schrijf hier uw bericht..." />
  <Button>Verzenden</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>